<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.vistaFormularioController">
    <VBox prefHeight="400.0" prefWidth="600.0" spacing="10">
        <stylesheets>
            <URL value="@../styles/stylesVistaFormulario.css" />
        </stylesheets>

        <Label styleClass="title" text="Registro de consultor" />

        <HBox spacing="10">
            <TextField fx:id="nombre" promptText="Nombre" />
            <TextField fx:id="apeliidoPaterno" promptText="Apellido Paterno" />
            <TextField fx:id="apeliidoMaterno" promptText="Apellido Materno" />
        </HBox>

        <TextField fx:id="emailField" promptText="Correo" />
        <PasswordField fx:id="passwordField" promptText="Contrasena" />
        <PasswordField fx:id="confirmPasswordField" promptText="Confirmar Contrasena" />

        <HBox alignment="CENTER">
            <Button onAction="#btnAgregar" styleClass="submit" text="Agregar" />
        </HBox>
      <HBox alignment="CENTER">
         <children>
            <Button onAction="#btnRegresar" styleClass="submit" text="Regresar" />
         </children>
      </HBox>
    </VBox>
</StackPane>
