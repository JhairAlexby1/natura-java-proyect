<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.vistaBuscarController">
    <stylesheets>
        <URL value="@../styles/stylesVistaBuscar.css" />
    </stylesheets>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="searchField" promptText="Escribe el nombre del consultor" prefWidth="300" />
        <Button fx:id="searchButton" text="Buscar" onAction="#buscarConsultor" />
    </HBox>

    <TextArea fx:id="resultsArea" editable="false" prefHeight="200" />

    <Button fx:id="backButton" text="Regresar" onAction="#btnRegresar" alignment="CENTER" />
</VBox>