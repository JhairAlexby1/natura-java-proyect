<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controladores.vistaBuscarController"
      spacing="10">

    <stylesheets>
        <URL value="@../styles/stylesVistaBuscar.css" />
    </stylesheets>

    <TextField fx:id="searchField" promptText="Escribe el nombre del consultor" />

    <Button fx:id="searchButton" text="Buscar" onAction="#buscarConsultor" />

    <TextArea fx:id="resultsArea" editable="false" />

    <Button fx:id="backButton" text="Regresar" onAction="#btnRegresar" />

</VBox>