<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.vistaBuscarController">
    <stylesheets>
        <URL value="@../styles/stylesBotones.css" />
    </stylesheets>

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="searchField" prefWidth="300" promptText="Escribe el nombre del consultor" />
        <Button fx:id="searchButton" onAction="#buscarConsultor" styleClass="button" text="Buscar" />
    </HBox>

    <TextArea fx:id="resultsArea" editable="false" prefHeight="200" />

    <Button fx:id="backButton" alignment="CENTER" onAction="#btnRegresar" prefHeight="43.0" prefWidth="123.0" styleClass="button" text="Regresar" />
</VBox>
